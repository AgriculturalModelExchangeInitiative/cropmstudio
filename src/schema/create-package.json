{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "create-package",
  "title": "Create Package",
  "description": "Create a new Crop2ML package",
  "label": "Create Package",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "projectName": {
      "type": "string",
      "title": "Project name",
      "default": "AgriculturalModelExchangeInitiative"
    },
    "packageName": {
      "type": "string",
      "title": "Package name"
    },
    "authors": {
      "type": "string",
      "title": "Authors"
    },
    "description": {
      "type": "string",
      "title": "Description"
    },
    "license": {
      "type": "string",
      "title": "License",
      "enum": ["No license file", "MIT", "BSD-3-Clause"],
      "default": "No license file"
    }
  },
  "required": ["projectName", "packageName", "description"]
}
