{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "composition/model-reference",
  "title": "Model Reference",
  "description": "Schema for a single model reference in a composition",
  "type": "string",
  "pattern": "^([a-zA-Z0-9_-]+:)?(unit|composition)\\.[a-zA-Z0-9_-]+\\.xml$",
  "examples": [
    "unit.ModelName.xml",
    "composition.OtherModel.xml",
    "ExternalPackage:unit.Model.xml"
  ]
}
