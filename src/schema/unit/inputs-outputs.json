{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "unit/inputs-outputs",
  "title": "Inputs/Outputs",
  "description": "Schema for the inputs/outputs and functions form",
  "type": "object",
  "properties": {
    "Inputs": {
      "type": "array",
      "description": "Array of input/output variables",
      "items": {
        "$ref": "input-output.json"
      },
      "minItems": 1
    },
    "Functions": {
      "type": "array",
      "description": "Function files",
      "items": {
        "type": "object",
        "properties": {
          "file": {
            "type": "string",
            "description": "Function file name (must end with .pyx)",
            "pattern": "\\.pyx$"
          },
          "type": {
            "type": "string",
            "description": "Function type",
            "enum": ["internal", "external"]
          }
        },
        "required": ["file", "type"],
        "additionalProperties": false
      }
    },
    "init": {
      "type": "boolean",
      "description": "Whether an initialization function is needed",
      "default": false
    }
  },
  "required": ["Inputs"],
  "additionalProperties": false
}
